<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/medication_pictures_layout">

    <android.support.v7.widget.Toolbar android:id="@+id/medication_pictures_toolbar" android:layout_alignParentTop="true" style="@style/toolbar">
        <ProgressBar android:id="@+id/medication_pictures_toolbar_progressbar" style="@style/toolbar_progressbar"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/lvh_swipe_refresh_layout" android:layout_below="@+id/medication_pictures_toolbar" style="@style/swipe_refresh_layout">
        <android.support.v7.widget.RecyclerView android:id="@+id/medication_pictures_cards" style="@style/medication_pictures_cards"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <View android:layout_below="@+id/medication_pictures_toolbar" style="@style/toolbar_shadow"/>

</RelativeLayout>