<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/poisonings_cards_layout">

    <android.support.v7.widget.Toolbar android:id="@+id/poisonings_cards_toolbar" style="@style/toolbar">
        <ProgressBar android:id="@+id/poisonings_cards_toolbar_progressbar" style="@style/toolbar_progressbar"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/poisonings_cards_swipe_refresh_layout" style="@style/swipe_refresh_cards_layout">
        <android.support.v7.widget.RecyclerView android:id="@+id/poisonings_cards_cards" style="@style/poisonings_cards_cards"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout android:id="@+id/poisonings_cards_no_poisonings" style="@style/poisonings_cards_no_poisonings_layout">

        <TextView android:text="@string/poisonings_cards_no_results" style="@style/poisonings_cards_no_poisonings_information"/>
        <Button android:id="@+id/poisonings_cards_no_poisonings_button" android:text="@string/poisonings_cards_check_on_the_web" style="@style/poisonings_cards_no_poisonings_button"/>

    </LinearLayout>

</LinearLayout>